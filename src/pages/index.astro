---
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Projects from "../components/Projects.astro";
import Experience from "../components/Experience.astro";
import Education from "../components/Education.astro";
import Footer from "../components/Footer.astro";
import VisitorTracker from "../components/VisitorTracker.astro";
import { siteConfig } from "../config";
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Phill Scargill - Control Systems Engineer</title>
    <meta name="description" content="Phill Scargill is a Control Systems Engineer specializing in automation, PLC programming, and full-stack development. Based in Austin, TX." />
    <meta name="keywords" content="control systems engineer, automation, PLC programming, full-stack development, Phill Scargill, Austin TX" />
    <meta name="author" content="Phill Scargill" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://coolphill.com/" />
    <meta property="og:title" content="Phill Scargill - Control Systems Engineer" />
    <meta property="og:description" content="Control Systems Engineer specializing in automation, PLC programming, and full-stack development." />
    <meta property="og:image" content="https://coolphill.com/favicon.svg" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://coolphill.com/" />
    <meta property="twitter:title" content="Phill Scargill - Control Systems Engineer" />
    <meta property="twitter:description" content="Control Systems Engineer specializing in automation, PLC programming, and full-stack development." />
    <meta property="twitter:image" content="https://coolphill.com/favicon.svg" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#E0CCFA" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://coolphill.com/" />
    
    <!-- Version: 1.0.1 - API Debug Build -->
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Phill Scargill",
        "jobTitle": "Control Systems Engineer",
        "description": "Control Systems Engineer specializing in automation, PLC programming, and full-stack development",
        "url": "https://coolphill.com",
        "sameAs": [
          "https://www.linkedin.com/in/phillip-scargill-4a709a274/",
          "https://github.com/Ph-ill"
        ],
        "worksFor": {
          "@type": "Organization",
          "name": "Self-employed"
        },
        "knowsAbout": [
          "Control Systems",
          "Automation",
          "PLC Programming",
          "Full-stack Development",
          "Industrial Engineering"
        ]
      }
    </script>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <Header />
    <main id="main-content">
      <Hero />
      <About />
      <Projects />
      <Experience />
      <Education />
    </main>
    <Footer />
    <VisitorTracker />
  </body>
</html>
